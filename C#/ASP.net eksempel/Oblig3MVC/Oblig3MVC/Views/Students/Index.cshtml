<h1>Index</h1>

<form asp-action="Index">
    <input name="input">
    <button type="submit">Test</button>
</form>

<form asp-action="Index">
    <p>Select Courses</p>
    <select name="selectedCourse">

        @foreach (Course c in ViewBag.Courses!)
        {
            <option>
                <a>@c.Coursecode</a>
            </option>
        }

    </select>
    <button type="submit">Search!</button>
</form>

<form asp-action="searchGrades">
    <select name="selectedGrade">
        <option>A</option>
        <option>B</option>
        <option>C</option>
        <option>D</option>
        <option>E</option>
        <option>F</option>
    </select>
    <button type="submit">Search</button>
</form>


<p>
    <a asp-action="Create">Create New</a>
</p>
<div style="float: left;margin-right:100px">
    <table style="display: inline-block;" class="table">
        <thead>
