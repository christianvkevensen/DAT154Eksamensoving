                <th>
                    <p>Names</p>
                </th>
                <th>
                    <p>Grade</p>
                </th>
                <th>
                    <p>Course</p>
                </th>
            </tr>
        </thead>
        <tbody>
            @if (foundGrades != null)
            {
                @foreach (Grade item in ViewBag.FoundGrades!)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Student.Studentname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Grade1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Coursecode)
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

